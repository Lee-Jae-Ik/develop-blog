<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lji.blog.mapper.BoardMapper">
    <select id="showBoard" resultType="com.lji.blog.model.schema.Board">
        select
               id as id,
               user_id as userId,
               title as title,
               created_date as createdDate,
               modified_date as modifiedDate
        from board
    </select>
</mapper>